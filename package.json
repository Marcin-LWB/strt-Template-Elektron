{
  "name": "start-template",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "description": "Szablon aplikacji Electron + React + TypeScript z obsługą Excel",
  "author": "Marcin Ostrowski",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build-electron": "npm run build && electron-builder",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:dev\""
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "idb-keyval": "^6.2.2",
    "pino": "^10.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "pino-pretty": "^13.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.cpk.export.weryfikacja",
    "productName": "CPK Export Weryfikacja",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/vite.svg"
    }
  }
}
